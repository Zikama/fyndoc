                              <div class="art_inp_co">
                                  <input type="date" class="art_inp" placeholder="Date Of birth" id="date_of_birth" value="1099-02-01" name="date_of_birth" required>
                              </div>
                          </div>

                          <div class="art_inps">
                              <label for="email"> Email</label>
