                -moz-appearance: none;
                -ms-appearance: none;
                -o-appearance: none;
                appearance: none;
                cursor: none;
            }
        }
        /* Tablet */
        
        @media screen and (min-width: 768px) {
            .art-btn_sucess {
                min-width: 80%;
                margin: auto 10%;
                font-size: 26px;
                cursor: pointer;
            }
        }
        /* Desktop */
        
        @media screen and (min-width: 1025px) {
            .art-btn_sucess {
                min-width: 81%;
                margin: auto 27%;
                font-size: 23px;
                padding: 1pc 3pc;
            }
            .opacity-0 {
                opacity: 1;
                -webkit-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                -o-user-select: none;
                user-select: none;
                -webkit-visibility: visible;
                -moz-visibility: visible;
                -ms-visibility: visible;
                -o-visibility: visible;
                visibility: visible;
