        .art-btn_sucess {
            width: auto;
            min-width: 50%;
            height: auto;
            padding: 1pc 1pc;
            margin: auto 21%;
            border: 0;
            border-radius: 10px;
            background-color: #50cb6a;
            font-size: 23px;
            color: #e9f4fe;
            cursor: pointer;
        }
        /* Mobile */
        
        @media screen and (min-width: 320px) {
            .art-btn_sucess {
                min-width: 50vw;
                margin: auto auto auto 10%;
                font-size: 20px;
                cursor: pointer;
            }
            .opacity-0 {
                opacity: 0;
                -webkit-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                -o-user-select: none;
                user-select: none;
