<style>
    .art_alert.alert-success {
        width: 70%;
        display: flex;
        justify-content: space-around;
        margin: 0 auto 17px;
        background: rgba(0, 197, 34, 0.22);
        padding: 11px;
        border-radius: 6px;
        font-size: 14pt;
        color: #027706;
        box-shadow: 0 0 2px 0px #8c8c8c;
    }
    
    .art_alert.alert-warning {
        width: 70%;
        display: flex;
        justify-content: space-around;
        margin: 0 auto 17px;
        background: #E91E63;
        padding: 11px;
        border-radius: 6px;
        font-size: 14pt;
        color: #f6f6f6;
        box-shadow: 0 0 3px 0px rgb(232, 240, 254);
    }
